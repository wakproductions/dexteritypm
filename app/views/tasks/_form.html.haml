=form_for [@project, @task] do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        ="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages._each do |msg|
          %li
            =msg

  -if @task.parent_task
    .field
      ="(Parent task: #{@task.parent_task.title})"
      =f.hidden_field :parent_task_id

  .field
    =f.label :title
    =f.text_field :title, size: 80

  .field
    =f.label :category
    =f.collection_select :category, Task::CATEGORY, :last, :first

  .field
    =f.label :status
    =f.collection_select :status, Task::STATUS, :last, :first

  .field
    =f.label :description
    %br
    =f.text_area :description, rows: 10, cols: 80

  .actions
    =f.submit